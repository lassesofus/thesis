    <compiler angle="radian" meshdir="../../../../simhive/franka_sim" texturedir="../../../../simhive/franka_sim"/>

    <size njmax='1000' nconmax='1000'/>

    <include file="../../../../simhive/scene_sim/room_scene.xml"/>
    <include file="../../../../simhive/franka_sim/assets/assets.xml"/>
    <include file="../../../../simhive/furniture_sim/simpleTable/simpleTable_asset.xml"/>
    <include file="../../../../simhive/franka_sim/assets/actuator0.xml"/>
    <!-- RobotiQ 2F-85 gripper assets (replaces Franka gripper) -->
    <include file="../../../../simhive/robotiq_sim/assets/assets.xml"/>

    <!-- YCB object assets -->
    <include file="../../../../simhive/YCB_sim/includes/defaults_ycb.xml"/>
    <include file="../../../../simhive/YCB_sim/includes/assets_005_tomato_soup_can.xml"/>

    <worldbody>

        <!-- Original cameras -->
        <camera name='left_cam_far' pos='-0.691 0.147 1.121' xyaxes='0.231 -0.973 -0.000 0.050 0.012 0.999'/>
        <!-- Medium distance camera similar to real robot setup -->
        <camera name='left_cam' pos='-0.58 0.20 1.16' xyaxes='0.30 -0.954 0.0 0.05 0.02 0.999'/>

        <!-- New parameterized cameras for camera sensitivity experiments -->
        <!-- All cameras look at workspace center (0, 0.475, 1.0) -->
        <!-- Naming: {position}_{elevation} where position is azimuth direction -->
        <camera name='front_cam' pos='0.869 0.475 1.233' xyaxes='0.000 1.000 -0.000 -0.259 0.000 0.966'/>
        <camera name='right_cam' pos='-0.000 -0.394 1.233' xyaxes='1.000 -0.000 0.000 0.000 0.259 0.966'/>
        <camera name='back_cam' pos='-0.869 0.475 1.233' xyaxes='-0.000 -1.000 0.000 0.259 -0.000 0.966'/>
        <camera name='top_cam' pos='0.000 0.614 1.788' xyaxes='-1.000 0.000 0.000 -0.000 -0.985 0.174'/>
        <camera name='front_right_cam' pos='0.577 -0.102 1.380' xyaxes='0.707 0.707 -0.000 -0.299 0.299 0.906'/>
        <camera name='back_left_cam' pos='-0.577 1.052 1.380' xyaxes='-0.707 -0.707 0.000 0.299 -0.299 0.906'/>
        <camera name='left_high_cam' pos='-0.218 1.073 1.636' xyaxes='-0.940 -0.342 0.000 0.242 -0.664 0.707'/>
        <camera name='left_low_cam' pos='-0.308 1.321 1.000' xyaxes='-0.940 -0.342 0.000 0.000 0.000 1.000'/>

        <site name='workspace' type='box' size='.6 .375 .25' pos='0 0.475 1.0' group='3' rgba='0 0 .4 .2'/>

        <!-- Robot with RobotiQ gripper -->
        <body pos='0 0 .775' euler='0 0 1.57'>
            <geom type='cylinder' size='.120 .4' pos='-.04 0 -.4'/>
            <include file="../../../../simhive/franka_sim/assets/chain0_nogripper.xml"/>
        </body>

        <!-- RobotiQ 2F-85 gripper - will be reparented to panda0_link7 at runtime -->
        <body name="ee_mount" pos="0 0 0.11" euler="0 0 0">
            <include file="../../../../simhive/robotiq_sim/assets/chain.xml"/>
        </body>

        <!-- simple Table -->
        <body pos='0 0.475 0'>
            <include file="../../../../simhive/furniture_sim/simpleTable/simpleMarbleTable_body.xml"/>
        </body>

        <!-- Target site for placement (invisible) -->
        <site name='target' type='sphere' size='.05' pos='0.2 0.475 1.0' group='1' rgba='0 0 0 0'/>

        <!-- Graspable YCB tomato soup can on table -->
        <body name="grasp_object" pos="0 0.475 0.78">
            <include file="../../../../simhive/YCB_sim/includes/body_005_tomato_soup_can.xml"/>
            <site name="grasp_object" size="0.01" pos="0 0 .05"/>
            <!-- freejoint allows full 6-DOF movement for grasping -->
            <freejoint name="grasp_object_joint"/>
        </body>

    </worldbody>

</mujoco>
